generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Review {
  id         String       @id @default(cuid())
  bookId     String
  authorName String
  rating     Int
  content    String
  createdAt  DateTime     @default(now())
  votes      ReviewVote[]

  @@index([bookId])
}

model ReviewVote {
  id        String  @id @default(cuid())
  reviewId  String
  sessionId String
  value     Int
  review    Review  @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  @@unique([reviewId, sessionId], name: "reviewId_sessionId")
}
